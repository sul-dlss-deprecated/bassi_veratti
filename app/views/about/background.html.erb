<%= render :partial => 'show_background_sidebar' %>

<div id="content" class="span9 background" data-spy="scroll" data-target=".background-toc">
	<div class="row">
	  <div class="span9">
	    <h2><%= @page_title %></h2>
			<dl class="dl-horizontal">
				<dt><%=t('bassi.background.repository')%>:</dt><dd><%=t('bassi.background.repository_text')%>
				<dt><%=t('bassi.background.summary_title')%>:</dt><dd><%=t('bassi.background.summary_title_text')%>
				<dt><%=t('bassi.background.date')%>:</dt><dd><%=t('bassi.background.date_text')%>
				<dt><%=t('bassi.background.extent')%>:</dt><dd><%=t('bassi.background.extent_text')%>
				<dt><%=t('bassi.background.language')%>:</dt><dd><%=t('bassi.background.language_text')%>
			</dl>
	  </div>
	</div>
	
	<div class="row">
	  <div class="span9">
			<h3 id="notes"><%=t('bassi.background.notes_title') %></h3>
			<%= t('bassi.background.notes_text_html') %>
		</div>
	</div>

	<div class="row">
	  <div class="span9">
			<h3 id="extent"><%=t('bassi.background.extent_description_title') %></h3>
			<%= t('bassi.background.extent_description_text_html') %>
		</div>
	</div>

	<div class="row">
	  <div class="span9">
			<h3 id="custodial_note"><%=t('bassi.background.custodial_note_title') %></h3>
			<%= t('bassi.background.custodial_note_text_html') %>
		</div>
	</div>

</div>