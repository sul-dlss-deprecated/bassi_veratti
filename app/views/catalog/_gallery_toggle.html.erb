<div class="row results-controls">

  <div class="span3 prev-next">
    <% if paginate_params(@response).num_pages > 1 %>
    <%= paginate_rsolr_response @response, :theme => :blacklight_compact %>
    <% else %>
    <%= render_pagination_info(@response) %>
    <% end %>
  </div>

  <div class="span4 view-toggle">
    <div class='gallery_toggle tabbable tabs-below'>
      <ul class="nav nav-pills">
        <li><%= link_to(t('bassi.search.gallery_toggle.default'), catalog_index_path(params.merge(:view => 'default')), :class=>"#{'active' if params[:view] == 'default' or params[:view].nil? }") %></li>
        <li><%= link_to(t('bassi.search.gallery_toggle.text'), catalog_index_path(params.merge(:view => 'brief')), :class=>"#{'active' if params[:view] == 'brief'}") %></li>
        <li><%= link_to(t('bassi.search.gallery_toggle.gallery'), catalog_index_path(params.merge(:view => 'gallery')), :class=>"#{'active' if params[:view] == 'gallery'}") %></li>
        <!-- MAP VIEW CURRENTLY DISABLED IN SEARCH RESULTS -->
        <%#= link_to(t('bassi.search.gallery_toggle.map'), catalog_index_path(params.merge(:view => 'map')), :class=>"#{'active' if params[:view] == 'map'}") %>
      </ul>
    </div>
  </div>

  <div class="span2 page-pulldown">
    <%= render 'sort_and_per_page' %>
  </div>

</div>
