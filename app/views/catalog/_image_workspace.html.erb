<%- document ||= @document -%>

<div class="modal hide zoom-modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3><%= document[blacklight_config.show.heading] %></h3>
  </div>
  <div class="modal-body">
    <iframe id="image_workspace" style="width: 100%; height: 600px;" src="//embed.stanford.edu/iframe?url=http://purl.stanford.edu/<%= document[:id] %>&amp;hide_title=true&amp;hide_metadata=true&amp;hide_download=true&amp;maxwidth=600&amp;maxheight=550"></iframe>
  </div>
</div>