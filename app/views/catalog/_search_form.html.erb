<h4><%= t('bassi.search.search_label') %></h4>
<%= form_tag search_action_url, :method => :get, :class => 'search_form' do %>
  <%= render_hash_as_hidden_fields(params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>
  <label for="q" class="hide-text"><%= t('blacklight.search.form.q') %></label>
  <%= text_field_tag :q, params[:q], :class => "search_q q", :id => "q" %>
  <%= submit_tag(t('blacklight.search.form.q'), :class=>'hide') %>
  <button type="submit" class="btn btn-small"><%= t('bassi.search.search_label') %></button>
<%- end -%>
