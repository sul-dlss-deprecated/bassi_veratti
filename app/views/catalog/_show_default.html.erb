<div class="document">
  <div class="row">
    <div class="span9">
      <h2><%= t('bassi.collection.member_detail') %></h2>
    </div>
  </div>

  <div class="row document-details">
    <div class="span4 member-image">
      <%if @document.images.size > 0 %>
        <div id="image_carousel" class="carousel slide">
          <div class="carousel-inner">
            <%- @document.images.each_with_index do |image,index|%>
              <div class="item<%= " active" if index == 0 %>">
                <%= image_tag(image, :alt => "Image #{index}") %>
              </div>
            <%- end -%>
          </div>
          <div class="carousel-controls">
            <a class="carousel-control left" href="#image_carousel" data-slide="prev">&lsaquo;</a>
            <span class="number-of-items"><%=t('bassi.show.showing')%> <span id="iterator">1</span> <%= "#{t('bassi.show.of')} #{@document.images.count}" if @document.images.count > 1 %></span>
            <a class="carousel-control right" href="#image_carousel" data-slide="next">&rsaquo;</a>
          </div>
        </div>
      <% end %>
    </div>

    <div class="span5">
      <%= render_document_heading(:h4).html_safe %>
      <dl class="dl-horizontal  dl-invert">
        <dt><%=t('bassi.show.date')%>:</dt><dd><%=show_list(@document.date)%>&nbsp;</dd>
				<dt><%=t('bassi.show.box.one')%>:</dt><dd><%=@document.box%></dd>
				<dt><%=t('bassi.show.folder.one')%>:</dt><dd><%=@document.folder%></dd> 
        <dt><%=t('bassi.show.description')%>:</dt><dd><%=show_list(@document.description)%>&nbsp;</dd>
        <dt><%=t('bassi.show.people')%>:</dt><dd><%=show_list(@document.people)%>&nbsp;</dd>
        <dt><%=t('bassi.show.families')%>:</dt><dd><%=show_list(@document.families)%>&nbsp;</dd>
        <dt><%=t('bassi.show.location')%>:</dt><dd><%=show_list(@document.location)%>&nbsp;</dd>
        <dt><%=t('bassi.show.notes')%>:</dt><dd><%=show_list(@document.notes)%>&nbsp;</dd>
        <% unless @document.purl.blank? %><dt><%=t('bassi.show.citation')%>:</dt><dd><%=link_to @document.purl,@document.purl%>&nbsp;</dd><%end %>
      </dl>
    <div>

  </div>


</div>
<% if @document.folder_siblings.documents.size > 0%>
<div class="row">
  <div class="span9">
		<h3><%=t('bassi.show.all_items_in_folder')%>  (<%=@document.folder_siblings.documents.size%>)</h3> 
		<ul class="preview-folder-items">
  		<% @document.folder_siblings.documents.each do |sibling| %>
  		  <li>
  				<%= link_to(image_tag(sibling.first_image(:square),:alt=>sibling.title,:title=>sibling.title,:border=>0), catalog_path(sibling[:id])) %>
  			</li>
  		<% end %>
		</ul>
  </div>
</div>
<% end %>

