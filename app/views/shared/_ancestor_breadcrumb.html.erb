<% if ['file','box', 'folder'].include? document.level %>
	<li><%= link_to "#{t('bassi.show.series.word')} #{document.series_number}", inventory_path(:anchor => document.series) %></li> &#187;
<% end %>
<% if ['file','box'].include? document.level %>
	</li><%= link_to "#{t('bassi.show.box.word')} #{document.box}",inventory_path(:anchor => "box#{document.box}") %></li> &#187;
<% end %>
<% if document.level == 'file' %>
	<li><%= link_to "#{t('bassi.show.folder.word')} #{document.folder}",inventory_path(:anchor => "box#{document.box}-folder#{document.folder}") %></li>
<% end %>